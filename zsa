-- Рандомизация значений для обхода детекции
local function randomizeValue(val)
    if type(val) == "number" then
        return val + (math.random() * 0.001 - 0.0005)
    elseif type(val) == "string" then
        if math.random(1, 10) == 1 then
            return val .. string.char(math.random(97, 122))
        end
    end
    return val
end

