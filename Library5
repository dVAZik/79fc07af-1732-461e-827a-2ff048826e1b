        Position = UDim2.new(1, -40, 0, 0),
        ZIndex = 202
    })
    
    -- –î–µ–ª–∞–µ–º –æ–∫–Ω–æ –Ω–∞—Å—Ç—Ä–æ–µ–∫ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–µ–º—ã–º
