--[[
    Mod Menu Library v2.0
    –ü–æ–ª–Ω–æ—Å—Ç—å—é –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –∏ –ø—Ä–æ—Ä–∞–±–æ—Ç–∞–Ω–Ω–∞—è –±–∏–±–ª–∏–æ—Ç–µ–∫–∞ –º–µ–Ω—é
    –ü–æ–¥–¥–µ—Ä–∂–∫–∞: PC, Mobile, Console (—á–µ—Ä–µ–∑ VirtualInput)
    –ê–≤—Ç–æ—Ä: –§–∞—Ç–∏–º–∞ ‚ô•Ô∏è
]]--

local ModMenu = {}
ModMenu.__index = ModMenu

-- –°–µ—Ä–≤–∏—Å—ã
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local HttpService = game:GetService("HttpService")
local Lighting = game:GetService("Lighting")

-- –ö–æ–Ω—Å—Ç–∞–Ω—Ç—ã
local PLAYER = Players.LocalPlayer
local MOUSE = PLAYER:GetMouse()
local IS_MOBILE = UserInputService.TouchEnabled
local IS_CONSOLE = UserInputService.GamepadEnabled
local IS_PC = not IS_MOBILE and not IS_CONSOLE

-- –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
local DEFAULT_SETTINGS = {
    Menu = {
        Accent = Color3.fromRGB(100, 150, 255),
        Background = Color3.fromRGB(20, 20, 25),
        Text = Color3.fromRGB(240, 240, 245),
        Transparent = 0.95,
        Size = IS_MOBILE and 0.8 or 1.0
    },
    ESP = {
        Enabled = false,
        Box = true,
        Tracer = true,
        Health = true,
        Names = true,
        Distance = true,
        MaxDistance = 500,
        TeamCheck = true,
        Color = Color3.fromRGB(255, 50, 50)
    },
    Aimbot = {
        Enabled = false,
        Mode = "Legit", -- "Legit", "Silent", "Trigger"
        Bone = "Head",
        FOV = 100,
        Smoothness = 0.5,
        TeamCheck = true,
        VisibleCheck = true
    },
    Visual = {
        Fullbright = false,
        Chams = false,
        Ambient = Color3.new(0.5, 0.5, 0.5),
        Brightness = 1
    },
    Player = {
        GodMode = false,
        Speed = 16,
        JumpPower = 50,
        NoClip = false,
        Fly = false
    }
}

-- –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
local function Create(instanceType, properties)
    local obj = Instance.new(instanceType)
    for prop, value in pairs(properties) do
        obj[prop] = value
    end
    return obj
end

local function Tween(obj, props, duration, style)
    local tweenInfo = TweenInfo.new(duration or 0.2, style or Enum.EasingStyle.Quad)
    local tween = TweenService:Create(obj, tweenInfo, props)
    tween:Play()
    return tween
end

local function Round(num, decimal)
    local mult = 10^(decimal or 2)
    return math.floor(num * mult + 0.5) / mult
end

-- –û—Å–Ω–æ–≤–Ω–æ–π –∫–ª–∞—Å—Å –º–µ–Ω—é
function ModMenu.new(menuName)
    local self = setmetatable({}, ModMenu)
    
    self.MenuName = menuName or "ModMenu"
    self.Version = "2.0"
    self.GUI = nil
    self.Settings = table.clone(DEFAULT_SETTINGS)
    self.Connections = {}
    self.Elements = {}
    self.ESP = {Objects = {}}
    self.Aimbot = {Target = nil}
    self.Active = false
    self.Notifications = {}
    
    -- –°–æ–∑–¥–∞–µ–º —É–Ω–∏–∫–∞–ª—å–Ω—ã–π ID –¥–ª—è –º–µ–Ω—é
    self.MenuID = "Menu_" .. HttpService:GenerateGUID(false):sub(1, 8)
    
    -- –û—á–∏—â–∞–µ–º —Å—Ç–∞—Ä—ã–µ –º–µ–Ω—é
    self:CleanupOldMenus()
    
    -- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º
    self:Initialize()
    
    return self
end

-- –û—á–∏—Å—Ç–∫–∞ —Å—Ç–∞—Ä—ã—Ö –º–µ–Ω—é
function ModMenu:CleanupOldMenus()
    local menus = CoreGui:FindFirstChild("ModMenus")
    if menus then
        for _, menu in ipairs(menus:GetChildren()) do
            if menu.Name:find("Menu_") then
                menu:Destroy()
            end
        end
    end
end

-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –º–µ–Ω—é
function ModMenu:Initialize()
    -- –°–æ–∑–¥–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –≤ CoreGui
    local container = Create("Folder", {
        Name = "ModMenus",
        Parent = CoreGui
    })
    
    -- –°–æ–∑–¥–∞–µ–º ScreenGui
    self.GUI = Create("ScreenGui", {
        Name = self.MenuID,
        Parent = container,
        DisplayOrder = 9999,
        ResetOnSpawn = false,
        ZIndexBehavior = Enum.ZIndexBehavior.Global
    })
    
    -- –°–æ–∑–¥–∞–µ–º –≥–ª–∞–≤–Ω—É—é –∫–Ω–æ–ø–∫—É
    self:CreateMainButton()
    
    -- –°–æ–∑–¥–∞–µ–º –ø–ª–∞–≤–∞—é—â–∏–µ –Ω–∞–¥–ø–∏—Å–∏
    self:CreateFloatingTexts()
    
    -- –°–æ–∑–¥–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–µ –º–µ–Ω—é
    self:CreateMainMenu()
    
    -- –°–æ–∑–¥–∞–µ–º –æ–∫–Ω–æ –Ω–∞—Å—Ç—Ä–æ–µ–∫
    self:CreateSettingsWindow()
    
    -- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º —Å–∏—Å—Ç–µ–º—ã
    self:InitESP()
    self:InitAimbot()
    self:InitVisual()
    self:InitPlayer()
    
    -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –º–µ–Ω—é
    self.Active = true
    
    -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
    self:Notify("–ú–µ–Ω—é –∑–∞–≥—Ä—É–∂–µ–Ω–æ! v" .. self.Version)
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –≥–ª–∞–≤–Ω–æ–π –∫–Ω–æ–ø–∫–∏
function ModMenu:CreateMainButton()
    self.MainButton = Create("TextButton", {
        Name = "MainButton",
        Parent = self.GUI,
        Text = "‚â°",
        Font = Enum.Font.GothamBold,
        TextSize = 28,
        TextColor3 = Color3.new(1, 1, 1),
        BackgroundColor3 = Color3.fromRGB(40, 40, 50),
        BorderSizePixel = 0,
        Size = UDim2.new(0, 50, 0, 50),
        Position = UDim2.new(0, 20, 0.5, -25),
        ZIndex = 1000
    })
    
    local corner = Create("UICorner", {
        CornerRadius = UDim.new(1, 0),
        Parent = self.MainButton
    })
    
    local shadow = Create("ImageLabel", {
        Name = "Shadow",
        Parent = self.MainButton,
        Image = "rbxassetid://2615687895",
        ImageColor3 = Color3.new(0, 0, 0),
        ImageTransparency = 0.8,
        ScaleType = Enum.ScaleType.Slice,
        SliceCenter = Rect.new(23, 23, 277, 277),
        Size = UDim2.new(1, 30, 1, 30),
        Position = UDim2.new(0, -15, 0, -15),
        BackgroundTransparency = 1,
        ZIndex = 999
    })
    
    -- –î–æ–±–∞–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å
    self:MakeDraggable(self.MainButton)
    
    self.MainButton.MouseButton1Click:Connect(function()
        self:ToggleMenu()
    end)
    
    self.MainButton.TouchTap:Connect(function()
        self:ToggleMenu()
    end)
    
    -- –≠—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
    self.MainButton.MouseEnter:Connect(function()
        Tween(self.MainButton, {BackgroundColor3 = Color3.fromRGB(60, 60, 70)})
    end)
    
    self.MainButton.MouseLeave:Connect(function()
        Tween(self.MainButton, {BackgroundColor3 = Color3.fromRGB(40, 40, 50)})
    end)
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –ø–ª–∞–≤–∞—é—â–∏—Ö –Ω–∞–¥–ø–∏—Å–µ–π
function ModMenu:CreateFloatingTexts()
    local texts = {"–§–∞—Ç–∏–º–∞", "‚ô•Ô∏è", "v2.0", "Menu", "Mod"}
    local colors = {
        Color3.fromRGB(255, 100, 100),
        Color3.fromRGB(100, 255, 100),
        Color3.fromRGB(100, 100, 255),
        Color3.fromRGB(255, 255, 100),
        Color3.fromRGB(255, 100, 255)
    }
    
    for i = 1, 5 do
        local text = Create("TextLabel", {
            Name = "FloatText_" .. i,
            Parent = self.GUI,
            Text = texts[i] or "Text",
            Font = Enum.Font.GothamBold,
            TextSize = 24,
            TextColor3 = colors[i],
            BackgroundTransparency = 1,
            Size = UDim2.new(0, 100, 0, 40),
            Position = UDim2.new(math.random() * 0.8, 0, math.random() * 0.8, 0),
            ZIndex = 900
        })
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è –ø–ª–∞–≤–∞–Ω–∏—è
        task.spawn(function()
            local startPos = text.Position
            local time = 0
            local speed = 0.5 + math.random() * 0.5
            local radius = 50 + math.random() * 50
            
            while text and text.Parent do
                time += RunService.RenderStepped:Wait()
                
                local x = startPos.X.Offset + math.sin(time * speed) * radius
                local y = startPos.Y.Offset + math.cos(time * speed * 0.7) * radius * 0.5
                
                text.Position = UDim2.new(startPos.X.Scale, x, startPos.Y.Scale, y)
                
                -- –ú–µ—Ä—Ü–∞–Ω–∏–µ –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç–∏
                text.TextTransparency = 0.3 + math.sin(time * 2) * 0.3
            end
        end)
    end
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –º–µ–Ω—é
function ModMenu:CreateMainMenu()
    -- –û—Å–Ω–æ–≤–Ω–æ–π —Ñ—Ä–µ–π–º –º–µ–Ω—é
    self.MenuFrame = Create("Frame", {
        Name = "MenuFrame",
        Parent = self.GUI,
        BackgroundColor3 = self.Settings.Menu.Background,
        BackgroundTransparency = 0.1,
        BorderSizePixel = 0,
        Size = UDim2.new(0, 600, 0, 400),
        Position = UDim2.new(0.5, -300, 0.5, -200),
        Visible = false,
        ZIndex = 100
    })
    
    local corner = Create("UICorner", {
        CornerRadius = UDim.new(0, 12),
        Parent = self.MenuFrame
    })
    
    local shadow = Create("ImageLabel", {
        Name = "Shadow",
        Parent = self.MenuFrame,
        Image = "rbxassetid://2615687895",
        ImageColor3 = Color3.new(0, 0, 0),
        ImageTransparency = 0.7,
        ScaleType = Enum.ScaleType.Slice,
        SliceCenter = Rect.new(23, 23, 277, 277),
        Size = UDim2.new(1, 40, 1, 40),
        Position = UDim2.new(0, -20, 0, -20),
        BackgroundTransparency = 1,
        ZIndex = 99
    })
    
    -- Title bar
    local titleBar = Create("Frame", {
        Name = "TitleBar",
        Parent = self.MenuFrame,
        BackgroundColor3 = Color3.fromRGB(30, 30, 40),
        BorderSizePixel = 0,
        Size = UDim2.new(1, 0, 0, 40),
        ZIndex = 101
    })
    
    local titleCorner = Create("UICorner", {
        CornerRadius = UDim.new(0, 12),
        Parent = titleBar
    })
    
    local title = Create("TextLabel", {
        Name = "Title",
        Parent = titleBar,
        Text = self.MenuName .. " v" .. self.Version,
        Font = Enum.Font.GothamBold,
        TextSize = 18,
        TextColor3 = self.Settings.Menu.Text,
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 200, 1, 0),
        Position = UDim2.new(0, 15, 0, 0),
        TextXAlignment = Enum.TextXAlignment.Left,
        ZIndex = 102
    })
    
    local closeBtn = Create("TextButton", {
        Name = "CloseButton",
        Parent = titleBar,
        Text = "√ó",
        Font = Enum.Font.GothamBold,
        TextSize = 24,
        TextColor3 = Color3.fromRGB(255, 100, 100),
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 40, 1, 0),
        Position = UDim2.new(1, -40, 0, 0),
        ZIndex = 102
    })
    
    -- –î–µ–ª–∞–µ–º –º–µ–Ω—é –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–µ–º—ã–º –∑–∞ title bar
    self:MakeDraggable(self.MenuFrame, titleBar)
    
    -- –ö–Ω–æ–ø–∫–∞ –Ω–∞—Å—Ç—Ä–æ–µ–∫
    local settingsBtn = Create("TextButton", {
        Name = "SettingsButton",
        Parent = titleBar,
        Text = "‚öô",
        Font = Enum.Font.GothamBold,
        TextSize = 18,
        TextColor3 = self.Settings.Menu.Accent,
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 40, 1, 0),
        Position = UDim2.new(1, -80, 0, 0),
        ZIndex = 102
    })
    
    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –∫–æ–Ω—Ç–µ–Ω—Ç–∞
    local content = Create("Frame", {
        Name = "Content",
        Parent = self.MenuFrame,
        BackgroundTransparency = 1,
        Size = UDim2.new(1, 0, 1, -40),
        Position = UDim2.new(0, 0, 0, 40),
        ZIndex = 101
    })
    
    -- –õ–µ–≤–∞—è –ø–∞–Ω–µ–ª—å —Å —Ç–∞–±–∞–º–∏
    local leftPanel = Create("ScrollingFrame", {
        Name = "LeftPanel",
        Parent = content,
        BackgroundColor3 = Color3.fromRGB(25, 25, 30),
        BackgroundTransparency = 0.1,
        BorderSizePixel = 0,
        Size = UDim2.new(0, 150, 1, 0),
        Position = UDim2.new(0, 0, 0, 0),
        CanvasSize = UDim2.new(0, 0, 0, 0),
        ScrollBarThickness = 3,
        ScrollBarImageColor3 = self.Settings.Menu.Accent,
        ZIndex = 102
    })
    
    local leftCorner = Create("UICorner", {
        CornerRadius = UDim.new(0, 8),
        Parent = leftPanel
    })
    
    local listLayout = Create("UIListLayout", {
        Parent = leftPanel,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5)
    })
    
    -- –ü—Ä–∞–≤–∞—è –ø–∞–Ω–µ–ª—å —Å –∫–æ–Ω—Ç–µ–Ω—Ç–æ–º
    local rightPanel = Create("ScrollingFrame", {
        Name = "RightPanel",
        Parent = content,
        BackgroundTransparency = 1,
        Size = UDim2.new(1, -160, 1, 0),
        Position = UDim2.new(0, 160, 0, 0),
        CanvasSize = UDim2.new(0, 0, 0, 0),
        ScrollBarThickness = 3,
        ScrollBarImageColor3 = self.Settings.Menu.Accent,
        ZIndex = 101
    })
    
    local rightList = Create("UIListLayout", {
        Parent = rightPanel,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 10)
    })
    
    rightList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        rightPanel.CanvasSize = UDim2.new(0, 0, 0, rightList.AbsoluteContentSize.Y + 20)
    end)
    
    -- –î–æ–±–∞–≤–ª—è–µ–º –±–∞–∑–æ–≤—ã–µ —Ç–∞–±—ã
    self:AddTab("Home", "üè†", leftPanel, rightPanel)
    self:AddTab("Player", "üë§", leftPanel, rightPanel)
    self:AddTab("Visual", "üëÅÔ∏è", leftPanel, rightPanel)
    self:AddTab("World", "üåç", leftPanel, rightPanel)
    self:AddTab("Misc", "‚öôÔ∏è", leftPanel, rightPanel)
    
    -- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
    closeBtn.MouseButton1Click:Connect(function()
        self:ToggleMenu()
    end)
    
    settingsBtn.MouseButton1Click:Connect(function()
        self:ToggleSettings()
    end)
    
    -- –†–∞–∑–º–µ—Ä –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö
    if IS_MOBILE then
        self.MenuFrame.Size = UDim2.new(0.9, 0, 0.8, 0)
        self.MenuFrame.Position = UDim2.new(0.05, 0, 0.1, 0)
    end
end

-- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–∞–±–∞
function ModMenu:AddTab(name, icon, leftPanel, rightPanel)
    local tabButton = Create("TextButton", {
        Name = name .. "Tab",
        Parent = leftPanel,
        Text = "   " .. icon .. " " .. name,
        Font = Enum.Font.Gotham,
        TextSize = 14,
        TextColor3 = self.Settings.Menu.Text,
        TextXAlignment = Enum.TextXAlignment.Left,
        BackgroundColor3 = Color3.fromRGB(40, 40, 50),
        BorderSizePixel = 0,
        Size = UDim2.new(1, -10, 0, 35),
        LayoutOrder = #leftPanel:GetChildren()
    })
    
    local tabCorner = Create("UICorner", {
        CornerRadius = UDim.new(0, 6),
        Parent = tabButton
    })
    
    local contentFrame = Create("Frame", {
        Name = name .. "Content",
        Parent = rightPanel,
        BackgroundTransparency = 1,
        Size = UDim2.new(1, 0, 0, 0),
        LayoutOrder = #rightPanel:GetChildren(),
        Visible = false
    })
    
    local contentList = Create("UIListLayout", {
        Parent = contentFrame,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 10)
    })
    
    contentList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        contentFrame.Size = UDim2.new(1, 0, 0, contentList.AbsoluteContentSize.Y)
    end)
    
    -- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–µ—Ä–≤—ã–π —Ç–∞–±
    if #leftPanel:GetChildren() == 1 then
        tabButton.BackgroundColor3 = self.Settings.Menu.Accent
        contentFrame.Visible = true
    end
    
    tabButton.MouseButton1Click:Connect(function()
        -- –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Ü–≤–µ—Ç –≤—Å–µ—Ö —Ç–∞–±–æ–≤
        for _, child in ipairs(leftPanel:GetChildren()) do
            if child:IsA("TextButton") then
                child.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
            end
        end
        
        -- –°–∫—Ä—ã–≤–∞–µ–º –≤–µ—Å—å –∫–æ–Ω—Ç–µ–Ω—Ç
        for _, child in ipairs(rightPanel:GetChildren()) do
            if child:IsA("Frame") then
                child.Visible = false
            end
        end
        
        -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ç–∞–±
        tabButton.BackgroundColor3 = self.Settings.Menu.Accent
        contentFrame.Visible = true
    end)
    
    return contentFrame
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –æ–∫–Ω–∞ –Ω–∞—Å—Ç—Ä–æ–µ–∫
function ModMenu:CreateSettingsWindow()
    self.SettingsFrame = Create("Frame", {
        Name = "SettingsFrame",
        Parent = self.GUI,
        BackgroundColor3 = self.Settings.Menu.Background,
        BackgroundTransparency = 0.05,
        BorderSizePixel = 0,
        Size = UDim2.new(0, 700, 0, 500),
        Position = UDim2.new(0.5, -350, 0.5, -250),
        Visible = false,
        ZIndex = 200
    })
    
    local corner = Create("UICorner", {
        CornerRadius = UDim.new(0, 12),
        Parent = self.SettingsFrame
    })
    
    local shadow = Create("ImageLabel", {
        Name = "SettingsShadow",
        Parent = self.SettingsFrame,
        Image = "rbxassetid://2615687895",
        ImageColor3 = Color3.new(0, 0, 0),
        ImageTransparency = 0.7,
        ScaleType = Enum.ScaleType.Slice,
        SliceCenter = Rect.new(23, 23, 277, 277),
        Size = UDim2.new(1, 40, 1, 40),
        Position = UDim2.new(0, -20, 0, -20),
        BackgroundTransparency = 1,
        ZIndex = 199
    })
    
    -- Title bar –Ω–∞—Å—Ç—Ä–æ–µ–∫
    local settingsTitleBar = Create("Frame", {
        Name = "SettingsTitleBar",
        Parent = self.SettingsFrame,
        BackgroundColor3 = Color3.fromRGB(30, 30, 40),
        BorderSizePixel = 0,
        Size = UDim2.new(1, 0, 0, 40),
        ZIndex = 201
    })
    
    local settingsTitle = Create("TextLabel", {
        Name = "SettingsTitle",
        Parent = settingsTitleBar,
        Text = "–ù–∞—Å—Ç—Ä–æ–π–∫–∏",
        Font = Enum.Font.GothamBold,
        TextSize = 18,
        TextColor3 = self.Settings.Menu.Text,
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 200, 1, 0),
        Position = UDim2.new(0, 15, 0, 0),
        TextXAlignment = Enum.TextXAlignment.Left,
        ZIndex = 202
    })
    
    local settingsClose = Create("TextButton", {
        Name = "SettingsClose",
        Parent = settingsTitleBar,
        Text = "√ó",
        Font = Enum.Font.GothamBold,
        TextSize = 24,
