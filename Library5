-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Å–∏—Å—Ç–µ–º
function ModMenu:InitESP()
    self.ESP.Objects = {}
    
    local function UpdateESP()
        if not self.Settings.ESP.Enabled then
            for _, obj in pairs(self.ESP.Objects) do
                if obj then
                    obj:Destroy()
                end
            end
            self.ESP.Objects = {}
            return
        end
        
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= PLAYER and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local character = player.Character
                local root = character.HumanoidRootPart
                
                -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–∏—Å—Ç–∞–Ω—Ü–∏–∏
                local distance = (root.Position - PLAYER.Character.HumanoidRootPart.Position).Magnitude
                if distance > self.Settings.ESP.MaxDistance then
                    continue
                end
                
                -- –°–æ–∑–¥–∞–µ–º ESP –æ–±—ä–µ–∫—Ç
                if not self.ESP.Objects[player] then
                    self.ESP.Objects[player] = {}
                end
                
                -- Box ESP
                if self.Settings.ESP.Box then
                    if not self.ESP.Objects[player].Box then
                        local box = Create("BoxHandleAdornment", {
                            Name = "ESPBox",
                            Adornee = root,
                            AlwaysOnTop = true,
                            ZIndex = 0,
                            Size = root.Size + Vector3.new(0.1, 0.1, 0.1),
                            Color3 = self.Settings.ESP.Color,
                            Transparency = 0.3,
                            Parent = character
                        })
                        self.ESP.Objects[player].Box = box
                    end
                else
                    if self.ESP.Objects[player].Box then
                        self.ESP.Objects[player].Box:Destroy()
                        self.ESP.Objects[player].Box = nil
                    end
                end
                
                -- Tracer ESP
                if self.Settings.ESP.Tracer then
                    if not self.ESP.Objects[player].Tracer then
                        local tracer = Create("LineHandleAdornment", {
                            Name = "ESPTracer",
                            Adornee = root,
                            AlwaysOnTop = true,
                            ZIndex = 0,
                            Thickness = 1,
                            Color3 = self.Settings.ESP.Color,
                            Transparency = 0.5,
                            Parent = character
                        })
                        self.ESP.Objects[player].Tracer = tracer
                    end
                    
                    -- –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–∑–∏—Ü–∏—é —Ç—Ä–∞—Å—Å–µ—Ä–∞
                    local screenPos, onScreen = workspace.CurrentCamera:WorldToViewportPoint(root.Position)
                    if onScreen then
                        self.ESP.Objects[player].Tracer.Length = (Vector2.new(screenPos.X, screenPos.Y) - 
                            Vector2.new(workspace.CurrentCamera.ViewportSize.X/2, workspace.CurrentCamera.ViewportSize.Y)).Magnitude
                    end
                else
                    if self.ESP.Objects[player].Tracer then
                        self.ESP.Objects[player].Tracer:Destroy()
                        self.ESP.Objects[player].Tracer = nil
                    end
                end
            end
        end
    end
    
    -- –û–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è: –æ–±–Ω–æ–≤–ª—è–µ–º ESP –∫–∞–∂–¥—ã–µ 0.1 —Å–µ–∫—É–Ω–¥—ã
    table.insert(self.Connections, RunService.RenderStepped:Connect(function(delta)
        if delta > 0.1 then
            UpdateESP()
        end
    end))
end

function ModMenu:InitAimbot()
    self.Aimbot.Target = nil
    
    local function GetClosestPlayer()
        local closest = nil
        local closestDistance = self.Settings.Aimbot.FOV
        
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= PLAYER and player.Character then
                local humanoid = player.Character:FindFirstChild("Humanoid")
                local root = player.Character:FindFirstChild("HumanoidRootPart")
                
                if humanoid and humanoid.Health > 0 and root then
                    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–∏–¥–∏–º–æ—Å—Ç–∏
                    if self.Settings.Aimbot.VisibleCheck then
                        local ray = Ray.new(workspace.CurrentCamera.CFrame.Position, 
                                           (root.Position - workspace.CurrentCamera.CFrame.Position).Unit * 1000)
                        local hit = workspace:FindPartOnRayWithIgnoreList(ray, {PLAYER.Character})
                        if hit and hit:IsDescendantOf(player.Character) then
                            -- –ü—Ä–æ–≤–µ—Ä–∫–∞ FOV
                            local screenPos, onScreen = workspace.CurrentCamera:WorldToViewportPoint(root.Position)
                            if onScreen then
                                local mousePos = Vector2.new(UserInputService:GetMouseLocation().X, 
                                                            UserInputService:GetMouseLocation().Y)
                                local distance = (Vector2.new(screenPos.X, screenPos.Y) - mousePos).Magnitude
                                
                                if distance < closestDistance then
                                    closestDistance = distance
                                    closest = player
                                end
                            end
                        end
                    end
                end
            end
        end
        
        return closest
    end
    
    local function AimAt(target)
        if not target or not target.Character then return end
        
        local bone = target.Character:FindFirstChild(self.Settings.Aimbot.Bone)
        if not bone then
            bone = target.Character:FindFirstChild("Head") or target.Character:FindFirstChild("HumanoidRootPart")
        end
        
        if bone then
            local camera = workspace.CurrentCamera
            local targetPos = bone.Position
            
            if self.Settings.Aimbot.Mode == "Legit" then
                -- –ü–ª–∞–≤–Ω—ã–π –∞–∏–º
                local current = camera.CFrame
                local target = CFrame.lookAt(current.Position, targetPos)
                camera.CFrame = current:Lerp(target, self.Settings.Aimbot.Smoothness)
            elseif self.Settings.Aimbot.Mode == "Silent" then
                -- –ë–µ–∑ –¥–≤–∏–∂–µ–Ω–∏—è –∫–∞–º–µ—Ä—ã (–¥–ª—è –ø—Ä–∏—Ü–µ–ª–∏–≤–∞–Ω–∏—è –æ—Ä—É–∂–∏—è)
                -- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è –∑–∞–≤–∏—Å–∏—Ç –æ—Ç –∏–≥—Ä—ã
            end
        end
    end
    
    -- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –∞–∏–º–±–æ—Ç–∞
    table.insert(self.Connections, RunService.RenderStepped:Connect(function()
        if self.Settings.Aimbot.Enabled then
            if self.Settings.Aimbot.Mode == "Trigger" then
                -- Triggerbot: –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è —Å—Ç—Ä–µ–ª—å–±–∞ –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
                local target = GetClosestPlayer()
                if target then
                    -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —Å—Ç—Ä–µ–ª—å–±—É
                    -- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è –∑–∞–≤–∏—Å–∏—Ç –æ—Ç –∏–≥—Ä—ã
                end
            else
                -- –ê–∏–º–±–æ—Ç —Å –ø—Ä–∏—Ü–µ–ª–∏–≤–∞–Ω–∏–µ–º
                self.Aimbot.Target = GetClosestPlayer()
                if self.Aimbot.Target then
                    AimAt(self.Aimbot.Target)
                end
            end
        end
    end))
end

function ModMenu:InitVisual()
    local function UpdateFullbright()
        if self.Settings.Visual.Fullbright then
            Lighting.GlobalShadows = false
            Lighting.ClockTime = 14
        else
            Lighting.GlobalShadows = true
        end
    end
    
    local function UpdateAmbient()
        Lighting.Ambient = self.Settings.Visual.Ambient
        Lighting.Brightness = self.Settings.Visual.Brightness
    end
    
    -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫
    self:OnSettingChanged("Visual.Fullbright", UpdateFullbright)
    self:OnSettingChanged("Visual.Ambient", UpdateAmbient)
    self:OnSettingChanged("Visual.Brightness", UpdateAmbient)
    
    -- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
    UpdateFullbright()
    UpdateAmbient()
end

function ModMenu:InitPlayer()
    local function UpdateSpeed()
        if PLAYER.Character and PLAYER.Character:FindFirstChild("Humanoid") then
            PLAYER.Character.Humanoid.WalkSpeed = self.Settings.Player.Speed
        end
    end
    
    local function UpdateJump()
        if PLAYER.Character and PLAYER.Character:FindFirstChild("Humanoid") then
            PLAYER.Character.Humanoid.JumpPower = self.Settings.Player.JumpPower
        end
    end
    
    -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ö–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫
    table.insert(self.Connections, PLAYER.CharacterAdded:Connect(function(character)
        character:WaitForChild("Humanoid")
        UpdateSpeed()
        UpdateJump()
    end))
    
    -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫
    self:OnSettingChanged("Player.Speed", UpdateSpeed)
    self:OnSettingChanged("Player.JumpPower", UpdateJump)
end

-- –°–∏—Å—Ç–µ–º–∞ –ø–æ–ª–µ—Ç–∞
function ModMenu:ToggleFly(enabled)
    if enabled then
        local bodyVelocity = Create("BodyVelocity", {
            Parent = PLAYER.Character:FindFirstChild("HumanoidRootPart"),
            MaxForce = Vector3.new(10000, 10000, 10000),
            Velocity = Vector3.new(0, 0, 0)
        })
        
        local flying = true
        local speed = 50
        
        table.insert(self.Connections, UserInputService.InputBegan:Connect(function(input)
            if input.KeyCode == Enum.KeyCode.W then
                bodyVelocity.Velocity = workspace.CurrentCamera.CFrame.LookVector * speed
            elseif input.KeyCode == Enum.KeyCode.S then
                bodyVelocity.Velocity = -workspace.CurrentCamera.CFrame.LookVector * speed
            elseif input.KeyCode == Enum.KeyCode.A then
                bodyVelocity.Velocity = -workspace.CurrentCamera.CFrame.RightVector * speed
            elseif input.KeyCode == Enum.KeyCode.D then
                bodyVelocity.Velocity = workspace.CurrentCamera.CFrame.RightVector * speed
            end
        end))
        
        table.insert(self.Connections, UserInputService.InputEnded:Connect(function(input)
            if input.KeyCode == Enum.KeyCode.W or input.KeyCode == Enum.KeyCode.S or
               input.KeyCode == Enum.KeyCode.A or input.KeyCode == Enum.KeyCode.D then
                bodyVelocity.Velocity = Vector3.new(0, 0, 0)
            end
        end))
    else
        -- –û—Ç–∫–ª—é—á–∞–µ–º –ø–æ–ª–µ—Ç
        local root = PLAYER.Character:FindFirstChild("HumanoidRootPart")
        if root then
            local bv = root:FindFirstChild("BodyVelocity")
            if bv then bv:Destroy() end
        end
    end
end

-- NoClip —Å–∏—Å—Ç–µ–º–∞
function ModMenu:ToggleNoClip(enabled)
    if enabled then
        table.insert(self.Connections, RunService.Stepped:Connect(function()
            if PLAYER.Character then
                for _, part in ipairs(PLAYER.Character:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.CanCollide = false
                    end
                end
            end
        end))
    end
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏–π –Ω–∞—Å—Ç—Ä–æ–µ–∫
function ModMenu:OnSettingChanged(settingPath, callback)
    local parts = string.split(settingPath, ".")
    local current = self.Settings
    
    for i = 1, #parts - 1 do
        current = current[parts[i]]
    end
    
    local lastPart = parts[#parts]
    
    -- –ú–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ –∏–∑–º–µ–Ω–µ–Ω–∏–π
    local proxy = setmetatable({}, {
        __index = current,
        __newindex = function(t, k, v)
            if k == lastPart then
                rawset(current, k, v)
                callback(v)
            else
                rawset(current, k, v)
            end
        end
    })
    
    self.Settings = proxy
end

-- API –º–µ—Ç–æ–¥—ã
function ModMenu:Destroy()
    for _, connection in ipairs(self.Connections) do
        connection:Disconnect()
    end
    
    if self.GUI then
        self.GUI:Destroy()
    end
    
    self.Active = false
end

function ModMenu:GetSetting(path)
    local parts = string.split(path, ".")
    local current = self.Settings
    
    for _, part in ipairs(parts) do
        if current[part] then
            current = current[part]
        else
            return nil
        end
    end
    
    return current
end

function ModMenu:SetSetting(path, value)
    local parts = string.split(path, ".")
    local current = self.Settings
    
    for i = 1, #parts - 1 do
        if not current[parts[i]] then
            current[parts[i]] = {}
        end
        current = current[parts[i]]
    end
    
    current[parts[#parts]] = value
end

-- –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–π
ModMenu.CreateSection = ModMenu.CreateSection
ModMenu.Btn = ModMenu.Btn
ModMenu.Toggle = ModMenu.Toggle
ModMenu.Slider = ModMenu.Slider
ModMenu.Dropdown = ModMenu.Dropdown
ModMenu.ColorPicker = ModMenu.ColorPicker
ModMenu.Notify = ModMenu.Notify

return ModMenu
