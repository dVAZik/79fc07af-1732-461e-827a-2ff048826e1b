end

-- –í–∏–∑—É–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
function ModMenu:ToggleFullbright(enabled)
	if enabled then
		Lighting.GlobalShadows = false
		Lighting.FogEnd = 1000000
	else
		Lighting.GlobalShadows = true
		Lighting.FogEnd = 1000
	end
end

function ModMenu:ToggleChams(enabled)
	-- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è Chams
end

-- Misc —Ñ—É–Ω–∫—Ü–∏–∏
function ModMenu:ToggleFly(enabled)
	if enabled then
		-- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è Fly
	else
		-- –û—Ç–∫–ª—é—á–µ–Ω–∏–µ Fly
	end
end

function ModMenu:ToggleNoClip(enabled)
	if enabled then
		-- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è NoClip
	else
		-- –û—Ç–∫–ª—é—á–µ–Ω–∏–µ NoClip
	end
end

function ModMenu:ToggleGodMode(enabled)
	if enabled then
		-- –†–µ–∞–ª–∏–∑–∞—Ü–∏—è God Mode
	else
		-- –û—Ç–∫–ª—é—á–µ–Ω–∏–µ God Mode
	end
end

function ModMenu:TeleportToSpawn()
	local spawn = Workspace:FindFirstChild("SpawnLocation") or Workspace:FindFirstChildOfClass("SpawnLocation")
	if spawn then
		LocalPlayer.Character:MoveTo(spawn.Position)
	end
end

-- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
function ModMenu:Notify(message)
	local notification = Instance.new("TextLabel")
	notification.Name = GenerateUUID()
	notification.Text = message
	notification.Font = Enum.Font.Gotham
	notification.TextSize = 14
	notification.TextColor3 = Color3.fromRGB(255, 255, 255)
	notification.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
	notification.Size = UDim2.new(0, 200, 0, 40)
	notification.Position = UDim2.new(1, -220, 1, -50)
	notification.AnchorPoint = Vector2.new(1, 1)
	notification.Parent = MainFolder
	
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0.3, 0)
	corner.Parent = notification
	
	local stroke = Instance.new("UIStroke")
	stroke.Color = Color3.fromRGB(100, 150, 255)
	stroke.Thickness = 2
	stroke.Parent = notification
	
	-- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è
	notification.Transparency = 1
	local tweenIn = TweenService:Create(notification, TweenInfo.new(0.3), {Transparency = 0})
	tweenIn:Play()
	
	-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –∑–∞–∫—Ä—ã—Ç–∏–µ —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
	wait(3)
	
	local tweenOut = TweenService:Create(notification, TweenInfo.new(0.3), {Transparency = 1})
	tweenOut:Play()
	
	tweenOut.Completed:Connect(function()
		notification:Destroy()
	end)
end

-- –û—Ç–∫—Ä—ã—Ç–∏–µ/–∑–∞–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é
function ModMenu:ToggleMenu()
	if not self.MainFrame then
		self:CreateMainMenu()
	end
	
	self.MenuOpen = not self.MenuOpen
	self.MainFrame.Visible = self.MenuOpen
	
	if self.OpenButton then
		self.OpenButton.BackgroundTransparency = self.MenuOpen and 0 or 0.5
	end
	
	if self.BlurEffect then
		self.BlurEffect.Enabled = self.MenuOpen
	end
end

-- –û—Ç–∫—Ä—ã—Ç–∏–µ –Ω–∞—Å—Ç—Ä–æ–µ–∫
function ModMenu:OpenSettings()
	if not self.SettingsFrame then
		self:CreateSettings()
	end
	
	if self.MainFrame then
		self.MainFrame.Visible = false
	end
	
	self.SettingsOpen = true
	self.SettingsFrame.Visible = true
end

-- –ó–∞–∫—Ä—ã—Ç–∏–µ –Ω–∞—Å—Ç—Ä–æ–µ–∫
function ModMenu:CloseSettings()
	if self.SettingsFrame then
		self.SettingsFrame.Visible = false
	end
	
	self.SettingsOpen = false
	
	if self.MainFrame and self.MenuOpen then
		self.MainFrame.Visible = true
	end
end

-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è API
function ModMenu:AddSection(name, icon)
	local tabContent = self:CreateTab(name, icon or "üìÑ", self.TabsScrolling, self.ContentScrolling)
	return {
		AddButton = function(text, callback)
			return self:CreateButton(text, tabContent, callback)
		end,
		AddToggle = function(text, defaultValue, callback)
			return self:CreateToggle(text, defaultValue, tabContent, callback)
		end,
		AddSlider = function(text, min, max, defaultValue, callback)
			return self:CreateSlider(text, min, max, defaultValue, tabContent, callback)
		end,
		AddDropdown = function(text, options, defaultValue, callback)
			return self:CreateDropdown(text, options, defaultValue, tabContent, callback)
		end,
		AddColorPicker = function(text, defaultValue, callback)
			return self:CreateColorPicker(text, defaultValue, tabContent, callback)
		end
	}
end

-- –û—á–∏—Å—Ç–∫–∞
function ModMenu:Destroy()
	-- –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –≤—Å–µ—Ö —Ü–∏–∫–ª–æ–≤
	if self.ESPLoop then
		self.ESPLoop:Disconnect()
	end
	
	-- –£–¥–∞–ª–µ–Ω–∏–µ –≤—Å–µ—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤
	MainFolder:Destroy()
	
	if self.BlurEffect then
		self.BlurEffect:Destroy()
	end
	
	-- –û—á–∏—Å—Ç–∫–∞ —Ç–∞–±–ª–∏—Ü
	table.clear(self)
	table.clear(floatingLabels)
end

-- –ê–≤—Ç–æ–æ—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –ø–æ–≤—Ç–æ—Ä–Ω–æ–π –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏
function ModMenu:Clear()
	self:Destroy()
	return ModMenu.new()
end

-- –≠–∫—Å–ø–æ—Ä—Ç API
return {
	new = function(config)
		return ModMenu.new(config)
	end,
	
	Notify = function(message)
		local menu = ModMenu.new()
		menu:Notify(message)
	end
}
